{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "lukekeum <lukekeum11@gmail.com> (http://github.com/lukekeum)",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production ts-node -r tsconfig-paths/register src/index.ts",
    "start:dev": "NODE_ENV=development ts-node-dev -r tsconfig-paths/register src/index.ts | pino-pretty",
    "test": "NODE_ENV=test node -r tsconfig-paths/register scripts/setupTests.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.8",
    "@types/node-fetch": "^2.6.4",
    "faker": "^6.6.6",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "@src/(.*)$": "<rootDir>/src/$1",
      "@tests/(.*)$": "<rootDir>/tests/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/utils/tests/setup.ts"
    ]
  },
  "dependencies": {
    "@fastify/cors": "^8.3.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.21.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.2",
    "typeorm": "^0.3.17"
  }
}
